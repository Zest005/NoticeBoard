@model NoticeBoard.Web.Models.AnnouncementViewModel

@{
    ViewData["Title"] = "Announcement Details";
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var userName = User.Identity?.Name ?? "";
    var isAuthor = isAuthenticated && userName == Model.AuthorName;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - NoticeBoard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="/">NoticeBoard</a>
        <div class="ms-auto">
            @if (!isAuthenticated)
            {
                <a class="btn btn-outline-light" href="https://localhost:7247/auth/login?returnUrl=https://localhost:7010/announcements/authcallback">Login</a>
            }
            else
            {
                <span class="text-white me-2">Hello, @userName</span>
                <a class="btn btn-outline-light" href="/announcements/logout">Logout</a>
            }
        </div>
    </header>

    <main class="container mt-4">
        <h1 class="mb-4">@Model.Title</h1>
        <div class="card">
            <div class="card-header">
                <span class="badge bg-secondary">@Model.Category</span>
                <span class="badge bg-info text-dark ms-2">@Model.SubCategory</span>
                <span class="float-end text-muted">Created: @Model.CreatedDate.ToString("g")</span>
            </div>
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text">@Model.Description</p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.Status)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Contacts</dt>
                    <dd class="col-sm-9">@Model.AuthorName (Email: @Model.AuthorEmail)</dd>
                </dl>
            </div>
        </div>
        @if (isAuthor)
        {
            <div class="mt-3 d-flex justify-content-between align-items-center">
                <div>
                    <a class="btn btn-secondary" href="/announcements">Back to all announcements</a>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <a class="btn btn-warning" href="/announcements/edit/@Model.Id">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="mt-3">
                <a class="btn btn-secondary" href="/announcements">Back to all announcements</a>
            </div>
        }
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>